<div class="container">
  <div class="row">
    <div class="col-11 mx-auto">
      <h1>User info</h1>
      <div>
        <p>image <%= image_tag 'no_image.jpg' %></p>
        <p>name <%= @user.name %></p> 
        <%= link_to "edit", edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block"  %>
      </div>

      <div>
        <h1>New book</h1>
        <%= form_with model: @book do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :opinion %>
          <%= f.submit 'Create book' %>
        <% end %>
      </div>

      <div>
        <h1>Books</h1>
        <table>
          <tr>
            <th></th>
            <th>Title</th>
            <th>opinion</th>
          </tr>
          <% @books.each do |book| %>
            <tr>
              <td>image</td>
              <td><%= book.title %></td>
              <td><%= book.opinion %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>