<div class="container px-5">
  <div class="row">

      <div class="col-md-3 mb-2">
      <div class="mb-2">
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100, 100)%>
        <table class="table">
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          <tr> 
          <tr>
            <th>introduction</th>
            <th><%=@user.introduction %></th> 
          </tr>
          </table>
          <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fa-solid fa-user-gear"></i>
          <% end %>
      </div>

      <div>
        <h2>New book</h2>
        <%= form_with model: @book do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :opinion %>
          <p><%= f.submit 'Create book' %></p>
        <% end %>
      </div>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-inverse">
          <tr class=>
            <th></th>
            <th>Title</th>
            <th>opinion</th>
          </tr>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(100, 100)%></td>
              <td><%= book.title %></td>
              <td><%= book.opinion %></td>
            </tr>
           <% end %>
        </table>
      </div>
  </div>
</div>