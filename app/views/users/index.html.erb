<h1>User info</h1>
  <div>
  <p>image <%= image_tag 'no_image.jpg' %></p>
  <p>name <%= current_user.name %></p> 
  <p>introduction <%= current_user.introduction %></p> 
  <%= link_to "edit", edit_user_path(current_user) %>
  </div>

  <div>
  <h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :opinion %>
    <%= f.submit 'Create book' %>
  <% end %>
</div>


<h1>Users</h1>
<% @users.each do |user| %>
  <div>
  <p>image <%= image_tag 'no_image.jpg' %></p>
  <p>name <%= user.name %></p> 
  <%= link_to "show", user_path(user.id) %>
  </div>
<% end %>
