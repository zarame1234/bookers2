<div class="container">
  <div class="row">

    <div class="col-md-3 mb-3">
      <div class="mb-3">
        <h2>User info</h2>
        <p><%= image_tag 'no_image.jpg' %></p>
        <table class="table">
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th> 
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th> 
          </tr>
          </table>
          <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fa-solid fa-user-gear"></i>
          <% end %>
      </div>

      <div>
        <h2>New book</h2>
        <%= form_with model: @book do |f| %>
           <div class="form-group">
            <label>Title</label>
            <%= f.text_field :title, class: "form-control" %>
           </div>
          <div class="form-group">
            <label>Opinion</label>
            <%= f.text_area :opinion, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create Book', class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div> 

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
       <tr>
         <th>image</th>
         <th>name</th>
          <th></th>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(100, 100) %></td>
            <td><%= user.name %></td> 
            <td><%= link_to "show", user_path(user.id) %></td>
          </tr>
         <% end %>
       </table>
     </div>
     
    </div>
  </div>
</div>
