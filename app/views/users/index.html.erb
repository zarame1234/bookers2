<div class="container">
  <div class="row">
    <div class="col-11 mx-auto">


      <div>
        <h1>User info</h1>
        <p><%= image_tag 'no_image.jpg' %></p>
        <table class="table">
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th> 
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th> 
          </tr>
          </table>
          <%= link_to "edit", edit_user_path(current_user), class: "btn btn-outline-secondary btn-block"  %>
      </div>

      <div>
        <h1>New book</h1>
        <%= form_with model: @book do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :opinion %>
          <p><%= f.submit 'Create book' %></p>
        <% end %>
      </div>


      <h1>Users</h1>
      <table class="table">
       <tr>
         <th>image</th>
         <th>name</th>
          <th></th>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(100, 100) %></td>
            <td><%= user.name %></td> 
            <td><%= link_to "show", user_path(user.id) %></td>
          </tr>
         <% end %>
       </table>
     
    </div>
  </div>
</div>
