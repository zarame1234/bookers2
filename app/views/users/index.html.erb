<div class="container">
  <div class="row">
    <div class="col-11 mx-auto">
      <h1>User info</h1>
      <div>
        <p><%= image_tag 'no_image.jpg' %></p>
        <p>name <%= current_user.name %></p> 
        <p>introduction <%= current_user.introduction %></p> 
        <%= link_to "edit", edit_user_path(current_user), class: "btn btn-outline-secondary btn-block active"  %>
      </div>

      <div>
        <h1>New book</h1>
        <%= form_with model: @book do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :opinion %>
          <p><%= f.submit 'Create book' %></p>
        <% end %>
      </div>


      <h1>Users</h1>
      <table class="table table-hover">
       <tr>
         <th>image</th>
         <th>name</th>
          <th></th>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag 'no_image.jpg' %></td>
            <td><%= user.name %></td> 
            <td><%= link_to "show", user_path(user.id) %></td>
          </tr>
         <% end %>
       </table>
     
    </div>
  </div>
</div>
