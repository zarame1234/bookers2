<div class="container">
  <div class="row">
 
    <div class="col-md-3 mb-3">
      <div class="mb-3">
        <h2>User info</h2> 
        <%= image_tag @user.get_profile_image(100, 100) %>
        <table class="table mb-4">
          <tr> 
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </table>
          <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fa-solid fa-user-gear"></i>
          <% end %>
      </div>

      <div>
        <h2>New book</h2>
        <%= form_with model: @book do |f| %>
          <div class="form-group">
            <label>Title</label>
            <%= f.text_field :title, class: "form-control" %>
           </div>
          <div class="form-group">
            <label>Opinion</label>
            <%= f.text_area :body, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create Book', class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
      

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user) do %>                  
                  <%= image_tag @user.get_profile_image(100, 100) %>
                  <br>
                  <%= @book_show.user.name %>          
                <% end %>
              </td>
              <td><%= link_to @book_show.title, book_path(@user) %></td>
              <td><%= @book_show.body %></td>
                <% if @book_show.user == current_user %>
                  <td><%= link_to "Edit", edit_book_path, class: "btn btn-success btn-sm" %></td>
                  <td><%= link_to "Destroy", book_path(@book_show.id), method: :delete, class: "btn btn-danger btn-sm" %></td>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
     </div>
    </div>
  </div>
</div>

