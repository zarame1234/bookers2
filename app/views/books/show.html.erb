<div class="container">
  <div class="row">
    <div class="col-11 mx-auto">

      <div>
        <h1>User info</h1>
    
        <%= image_tag @user.get_profile_image(100, 100) %>
        <table class="table table-hover">
          <tr> 
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </table>
        <%= link_to "edit", edit_user_path(@user), class: "btn btn-outline-secondary btn-block"%>
      </div>

      <div>
        <h1>New book</h1>
        <%= form_with model: @book do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :opinion %>
          <p><%= f.submit 'Create book' %></p>
        <% end %>
      </div>

      <div>
        <h1>Book detail</h1>
        <table class="table table-hover">
          <tr>
            <td>
              <div><%= image_tag @user.get_profile_image(100, 100) %></div>
              <div><%= @book_show.user.name %></div>
            </td>
            <td><%= @book_show.title %></td>
            <td><%= @book_show.opinion %></td>
            <% if @book_show.user == current_user %>
              <td><%= link_to "edit", edit_book_path %></td>
              <td><%= link_to "destroy", book_path(@book_show.id), method: :delete %></td>
            <% end %>
         </tr>
        </table>
     </div>
    </div>
  </div>
</div>

