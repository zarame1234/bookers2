<div class="container">
  <div class="row">
 
    <div class="col-md-3 mb-2">
      <div class="mb-2">
        <h2>User info</h2> 
        <%= image_tag @user.get_profile_image(100, 100) %>
        <table class="table mb-4">
          <tr> 
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </table>
        <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>

      <div>
        <h2>New book</h2>
        <%= form_with model: @book do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :opinion %>
          <p><%= f.submit 'Create book' %></p>
        <% end %>
      </div>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table table-hover">
          <tr>
            <td>
              <div>
                <%= link_to user_path(@user) do %>
                  <%= image_tag @user.get_profile_image(100, 100) %>
                <% end %>
              </div>
              <div><%= link_to @book_show.user.name, user_path(@user) %></div>
            </td>
            <td><%= link_to @book_show.title, book_path(@user) %></td>
            <td><%= @book_show.opinion %></td>
            <% if @book_show.user == current_user %>
              <td><%= link_to "edit", edit_book_path %></td>
              <td><%= link_to "destroy", book_path(@book_show.id), method: :delete %></td>
            <% end %>
         </tr>
        </table>
     </div>
    </div>
  </div>
</div>

