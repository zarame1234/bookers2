<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_field :opinion %>
  <%= f.submit 'Create book' %>
<% end %>

<h1>Books</h1>
<% @books.each do |book| %>
  <div>
  <p>Title : <%= book.title %></p>
  <p>Opinion : <%= book.opinion %></p>
  </div>
<% end %>
