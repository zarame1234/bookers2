<div>
  <h1>User info</h1>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_prpfile_image(100, 100) %>
</div>

<div>
  <h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_field :opinion %>
    <%= f.submit 'Create book' %>
  <% end %>
</div>

<div>
  <h1>Books</h1>
  <% @books.each do |book| %>
    <div>
    <p>Title : <%= book.title %></p>
    <p>Opinion : <%= book.opinion %></p>
    </div>
  <% end %>
</div>