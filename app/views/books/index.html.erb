<div class="container">
  <div class="row">
    <div class="col-11 mx-auto">

      <div>
        <h1>User info</h1>
        <table class="table">
          <p><%= image_tag current_user.get_profile_image(100, 100) %></p>
          <p>name <%= current_user.name %></p>
          <p>introduction <%= current_user.introduction %></p>
          <%= link_to "edit", edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" %>
        </table>
      </div>

      <div>
        <h1>New book</h1>
        <%= form_with model: @book do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :opinion %>
          <%= f.submit 'Create book' %>
        <% end %>
      </div>

      <div>
        <h1>Books</h1>
        <table class="table table-hover">
          <tr>
            <th></th>
            <th>Title</th>
            <th>opinion</th>
          </tr>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
              <td><%= book.title %></td>
              <td><%= book.opinion %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>